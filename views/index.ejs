                <% if (isAuthenticated) { %> <span id="<%= z %>" style="cursor:alias;" onclick="makesomsmoke(this);window.open('https://www.paypal.com/cgi-bin/webscr?&amp;cmd=_xclick&amp;business=paulo-andrade@sapo.pt&amp;currency_code=EUR&amp;amount=<%= z.preco %>&amp;item_name=Pagamento de bilhete de <%= z.dia %> por parte de <%= user.name %>')
   ">


                  <%} %>
                      Bilhete  <%= z.dia %>  </strong> - <%= z.preco %> € </span>
                <% if (isAuthenticated) { %>
                <script>
                    function makesomsmoke(){
                    $(this).on('click', function() {
                        $.ajax({
                            type: 'POST',
                            url: '/buy',
                            data: { bilhete: '<%= z.dia %>',
                            preco:'<%= z.preco %>',
                                user: '<%= user.username %>'
                            },
                            success: function() {
                                alert('ok');
                            }
                        });
                    });}
                </script><%} %>
                <span id="<%= z.dia %>" class="badge"><%= z.bilhetesVendidos %>  comprados / <%= z.bilhetesRestantes %> disponiveis</span>
            </li>            <%} %>


        </ul><%} %></div>
    </div>
</div>

